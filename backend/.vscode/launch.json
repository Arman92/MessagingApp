{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "env": {
        "TS_NODE_FILES": "true"
      },
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--require",
        "ts-node/register",
        "--require",
        "tsconfig-paths/register",
        "--bail",
        "${workspaceFolder}/src/mocha/mochaHooks.ts",
        "--reporter",
        "dot",
        "--slow",
        "5000",
        "--colors",
        "${workspaceFolder}/src/**/*.test.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Node: Attach",
      "port": 9896,
      "address": "localhost",
      "restart": true,
      "protocol": "inspector",
      "sourceMapPathOverrides": {
        "/usr/src/app/*": "${workspaceRoot}/*"
      }
    }
  ]
}
